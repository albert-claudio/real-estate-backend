generator client {
    provider = "prisma-client-j"
}

datasource db{
    provider = "mongodb"
    url = env("DATABASE_URL")
}

model User {
    id               String @id @default(auto()) @map("_id") @db.ObjectId
    name             String?
    email            String @unique
    image            String?
    bookedVisits     Json[]
    favResidenciesiD String[] @db.ObjectId
    ownedResidencies Residency[] @relation("Owner")
}

model Residency {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    prince      Int
    address     String
    city        String
    country     String
    image       String
    facilities  Json
    userEmail   String
    owner       User @relation("Owner", fields: [userEmail], references: [email])
    createdAt DateTime @default(now())
    updateAt DateTime @updatedAt
}